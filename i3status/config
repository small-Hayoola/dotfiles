        format = "<span size='12pt' color='#d1d1d1' background='#9c6a00'>  VOL: %volume  </span>"
        format_muted = "ğŸµ: muted (%volume)"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
}

